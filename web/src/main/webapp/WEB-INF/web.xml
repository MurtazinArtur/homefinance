<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <context-param>
        <param-name>c_param</param-name>
        <param-value>c_value</param-value>
    </context-param>
    <servlet>
        <servlet-name>accountServlet</servlet-name>
        <servlet-class>geekfactory.homefinance.web.servlet.AccountServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>bankServlet</servlet-name>
        <servlet-class>geekfactory.homefinance.web.servlet.BankServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>categoryServlet</servlet-name>
        <servlet-class>geekfactory.homefinance.web.servlet.CategoryServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>currencyServlet</servlet-name>
        <servlet-class>geekfactory.homefinance.web.servlet.CurrencyServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>transactionServlet</servlet-name>
        <servlet-class>
            geekfactory.homefinance.web.servlet.TransactionServlet
        </servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CurrencyList</servlet-name>
        <jsp-file>/jsp/jstl/currency_list.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>servletConfigServlet</servlet-name>
        <servlet-class>
            geekfactory.homefinance.web.servlet.ServletConfigServlet
        </servlet-class>
        <init-param>
            <param-name>param1</param-name>
            <param-value>value1</param-value>
        </init-param>
        <init-param>
            <param-name>param2</param-name>
            <param-value>value2</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>servletContextServlet</servlet-name>
        <servlet-class>
            geekfactory.homefinance.web.servlet.ServletContextServlet
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>accountServlet</servlet-name>
        <url-pattern>/accounts</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>bankServlet</servlet-name>
        <url-pattern>/banks</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>categoryServlet</servlet-name>
        <url-pattern>/categories</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>currencyServlet</servlet-name>
       <url-pattern>/currencies</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>transactionServlet</servlet-name>
        <url-pattern>/transaction</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CurrencyList</servlet-name>
        <url-pattern>/currency_list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>servletConfigServlet</servlet-name>
        <url-pattern>/servlet-config</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>servletContextServlet</servlet-name>
        <url-pattern>/servlet-context</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>/start-page.html</welcome-file>
    </welcome-file-list>
</web-app>